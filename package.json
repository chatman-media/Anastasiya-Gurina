{
  "name": "anastasiya-gurina-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:portfolio": "turbo run build --filter=portfolio",
    "build:telegram": "turbo run build --filter=telegram-mini-app",
    "build:backend": "turbo run build --filter=@workspace/backend",
    "build:contracts": "turbo run build --filter=@workspace/contracts",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "turbo": "^2.8.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite": "npm:rolldown-vite@7.1.12"
  }
}